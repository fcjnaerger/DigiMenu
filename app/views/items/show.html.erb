<!-- Description of the meal -->
<div class="container-wrapper">
    <div class="item-details">
        <div class="item-shoppingcard">
            <!-- <p>1</p> -->
            <%= link_to ' <i class="fas fa-shopping-cart"></i> '.html_safe, root_path %>
        </div>
        <h3>
            <%= @item.name %>
        </h3>
        <p>
            <%= @item.description %>
        </p>
    </div>
    <!-- Amount of the meal -->
    <div class="item-amount-buttons">
        <div class="item-amount">
            <div class="item-amount-smaller">
                <p>-</p>
            </div>
            <div class="item-amount-display">
                <p>1</p>
            </div>
            <div class="item-amount-greater">
                <p>+</p>
            </div>
        </div>
        <div class="item-price">
            <h2>
                <span id="price">
                    <%=@item.price %></span> â‚¬</h2>
        </div>
    </div>
</div>
<div class="item-menu">
    <%= simple_form_for @current_order, url: order_current_orders_path do |f| %>
    <%= f.input :quantity, :as => :hidden, :input_html => { id: :input, :value => "1" } %>
    <%= f.input :item_price, :as => :hidden, :input_html => { :value => @item.price } %>
    <%= f.input :item_id, :as => :hidden, :input_html => { :value => @item.id } %>
    <%= f.input :order_id, :as => :hidden, :input_html => { :value => @order.id } %>
    <%= f.button :submit, 'Add to cart',name: "add_to_cart", class: "btn btn-primary"  %>
    <%= f.button :submit, 'Order now', name: 'order_now', class: "btn btn-primary" %>
    <% end %>
    <!-- simple form for -->
    <!-- hide field either with class of display: none -->
    <!-- f.hidden_field pass in the item id from @item.price -->
</div>
